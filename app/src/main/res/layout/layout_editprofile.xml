<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lin_1"
        android:visibility="visible"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_llogin">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/patientname"
                android:textSize="14dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/et_patientmame"
                android:singleLine="true"
                android:inputType="text"
                android:textColorHint="@color/gray"
                android:textColor="@color/darkgray"
                android:fontFamily="@font/opensans_regular"
                android:background="@null"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_llogin">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/patientemail"
                android:textSize="14dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:id="@+id/et_patienemail"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/gray"
                android:textColor="@color/darkgray"
                android:fontFamily="@font/opensans_regular"
                android:background="@null"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_llogin">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/contactno"
                android:textSize="14dp"
                android:gravity="center|left"
                android:singleLine="true"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:id="@+id/et_reg_cno"
                android:paddingRight="10dp"
                android:textColorHint="@color/gray"
                android:textColor="@color/darkgray"
                android:fontFamily="@font/opensans_regular"
                android:background="@null"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:id="@+id/rel_1"
            android:background="@drawable/btn_llogin">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/salplecolladdress"
                android:textSize="14dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:id="@+id/book_address"
                android:paddingRight="15dp"
                android:inputType="textImeMultiLine"
                android:textColorHint="@color/gray"
                android:textColor="@color/darkgray"
                android:fontFamily="@font/opensans_regular"
                android:background="@null"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            >


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/btn_llogin"
                    android:id="@+id/spin_male"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_down_arrow"
                    android:layout_gravity="right|center"
                    android:scaleType="fitXY"
                    android:layout_marginRight="20dp"/>
            </FrameLayout>

            <!-- <EditText
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:hint="@string/gender"
                 android:textSize="16dp"
                 android:gravity="center|left"
                 android:paddingLeft="15dp"
                 android:paddingRight="15dp"
                 android:singleLine="true"
                 android:inputType="textEmailAddress"
                 android:textColorHint="@color/gray"
                 android:textColor="@color/gray"
                 android:fontFamily="@font/opensans_bold"
                 android:background="@null"/>-->

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_llogin">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/dod"
                android:textSize="14dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:inputType="date"
                android:id="@+id/et_patientdob"
                android:textColorHint="@color/gray"
                android:textColor="@color/darkgray"
                android:fontFamily="@font/opensans_regular"
                android:background="@null"/>



        </RelativeLayout>



        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_llogin"
            android:backgroundTint="@color/rad"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:id="@+id/txt_booktest"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>